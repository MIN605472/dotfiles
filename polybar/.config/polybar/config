[colors]
bg = ${xrdb:color0}
bg-alt = ${xrdb:color8}
fg = ${xrdb:color7}
fg-alt = ${xrdb:color15}
primary = ${xrdb:color2}
secondary = ${xrdb:color3}

[global/wm]
margin-top = 0
margin-bottom = 5

[bar/top]
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 3

padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = "lucy tewi:antialias=false:pixelsize=11;0"
font-1 = "Wuncon Siji:antialias=false;0"
font-2 = "Hack Nerd Font Mono:style=Regular:pixelsize=19;6"
font-3 = "Hack Nerd Font Mono:style=Regular:pixelsize=14;3"

modules-left = bspwm
modules-center = date 
modules-right = mail cpu memory

tray-position = right
tray-padding = 1

wm-restack = bspwm

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/bspwm]
type = internal/bspwm

pin-workspace = true
strip-wsnumbers = true
index-sort = true
enable-scroll = false

label-focused = %name%
label-focused-background = ${colors.bg-alt}
label-focused-padding = 1
label-focused-overline =  ${colors.primary}

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.fg}

label-urgent = %name%
label-urgent-padding = 1

label-empty = %name%
label-empty-padding = 1
label-empty-foreground = ${colors.secondary}

[module/date]
type = internal/date
interval = 5
date = %a %d %b %Y
time = %H:%M

label = %{F#c01f74}%date%%{F-} %time%

[module/memory]
type = internal/memory
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = "%percentage_used:2%"

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = "%percentage:2%" 

