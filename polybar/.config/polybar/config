[colors]
bg = ${xrdb:color0}
bg-alt = ${xrdb:color8}
fg = ${xrdb:color7}
fg-alt = ${xrdb:color15}
primary = ${xrdb:color2}
secondary = ${xrdb:color3}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/top]
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 3
; bottom = true

padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = "lucy tewi:antialias=false:pixelsize=11;0"
font-1 = "Wuncon Siji:antialias=false;0"

modules-left = bspwm
modules-center = date
modules-right = mail cpu memory

; tray-position = right
; tray-padding = 1

wm-restack = bspwm

; override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/bspwm]
type = internal/bspwm

pin-workspace = true
strip-wsnumbers = true
index-sort = true
enable-scroll = false

label-focused = %name%
label-focused-background = ${colors.bg-alt}
label-focused-padding = 1
label-focused-overline =  ${colors.primary}

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.fg}

label-urgent = %name%
label-urgent-padding = 1

label-empty = %name%
label-empty-padding = 1
label-empty-foreground = ${colors.secondary}

[module/i3]
type = internal/i3

label-focused = %index%
label-focused-background = ${colors.bg-alt}
label-focused-padding = 1
; label-focused-overline =  ${colors.primary}

label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.fg}

label-urgent = %index%
label-urgent-padding = 1

; label-visible = %index%
; label-visible-padding = 1
; label-visible-foreground = ${colors.secondary}

[module/date]
type = internal/date
interval = 5
date = %a %d %b %Y
time = %H:%M

label = %date% %time%

[module/memory]
type = internal/memory
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = "%percentage_used:2%"

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = "%percentage:2%"

